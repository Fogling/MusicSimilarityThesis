{
  "model": {
    "pretrained_model": "MIT/ast-finetuned-audioset-10-10-0.4593",
    "hidden_sizes": [
      512,
      128
    ],
    "activation": "relu",
    "dropout_rate": 0.15,
    "output_dim": 128
  },
  "training": {
    "batch_size": 2,
    "epochs": 30,
    "learning_rate": 2e-05,
    "weight_decay": 0.05,
    "gradient_accumulation_steps": 8,
    "warmup_ratio": 0.2,
    "triplet_margin": 0.5,
    "num_workers": 2,
    "pin_memory": false,
    "eval_strategy": "steps",
    "save_strategy": "steps",
    "logging_steps": 100,
    "save_steps": 500,
    "seed": 42
  },
  "data": {
    "chunks_dir": "preprocessed_features",
    "split_file_train": null,
    "split_file_test": null,
    "test_split_ratio": 0.1,
    "min_files_per_genre": 2,
    "max_positive_tracks": 12,
    "triplets_per_positive_track": 2,
    "use_legacy_splits": false,
    "legacy_split_dir": null
  },
  "paths": {
    "model_output_dir": "ast_triplet_output",
    "log_dir": "logs",
    "checkpoint_dir": null
  },
  "experiment_name": "anti_overfitting_v1",
  "description": "Lower LR (2e-5), dropout (0.15), higher weight decay (0.05) to prevent overfitting seen in previous runs"
}