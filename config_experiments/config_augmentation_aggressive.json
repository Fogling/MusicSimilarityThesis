{
  "experiment": {
    "name": "Aggressive Audio Augmentation",
    "description": "Testing aggressive audio augmentations for heavy overfitting mitigation",
    "random_seed": 13
  },
  "data": {
    "preprocessed_features_path": "precomputed_7G_2Chunk",
    "dataset_generation": {
      "max_positive_tracks_per_anchor": 4,
      "triplets_per_positive_track": 1
    },
    "resample_train_samples": false,
    "resample_start_epoch": 1,
    "resample_cadence": 1,
    "resample_fraction": 0.3
  },
  "model": {
    "base_model": "MIT/ast-finetuned-audioset-10-10-0.4593",
    "projection_head": {
      "hidden_dim": 512,
      "output_dim": 128,
      "activation": "relu",
      "dropout": 0.5
    },
    "loss": {
      "type": "triplet",
      "margin_start": 0.8,
      "margin_end": 0.8,
      "margin_epochs": 1,
      "negative_mining": "none"
    }
  },
  "training": {
    "epochs": 10,
    "batch_size": 24,
    "gradient_accumulation_steps": 3,
    "learning_rate": 5e-6,
    "weight_decay": 5e-4,
    "scheduler": {
      "type": "linear",
      "warmup_ratio": 0.15,
      "min_lr": 1e-7
    },
    "early_stopping": {
      "enabled": true,
      "patience": 5,
      "min_delta": 0.005,
      "post_resample_grace_epochs": 2
    }
  },
  "augmentation": {
    "enabled": true,
    "augmentation_probability": 0.8,
    "use_2d_augmentations": true,
    "spectrogram": {
      "enabled": true,
      "time_mask_prob": 0.5,
      "time_mask_max_length": 25,
      "freq_mask_prob": 0.5,
      "freq_mask_max_length": 20,
      "noise_prob": 0.6,
      "noise_std": 0.07,
      "mixup_prob": 0.3,
      "mixup_alpha": 0.4,
      "volume_prob": 0.5,
      "volume_range": [0.7, 1.3],
      "temporal_shift_prob": 0.4,
      "temporal_shift_max": 7
    },
    "spectrogram_2d": {
      "enabled": true,
      "mel_bins": 128,
      "time_frames": 200,
      "freq_mask_prob": 0.6,
      "freq_mask_max": 20,
      "time_mask_prob": 0.6,
      "time_mask_max": 25,
      "num_freq_masks": 2,
      "num_time_masks": 2
    }
  }
}